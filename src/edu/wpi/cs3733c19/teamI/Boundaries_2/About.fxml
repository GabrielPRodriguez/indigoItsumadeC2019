<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733c19.teamI.Controllers2.AboutController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
         </BorderPane.margin>
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
            <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
         </rowConstraints>
         <children>
            <Label text="About">
               <font>
                  <Font name="Segoe UI Bold" size="32.0" />
               </font>
            </Label>
            <Separator GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></Separator>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../Assets/placeholder_icon.png" />
                     </image>
                  </ImageView>
                  <Label text="Michael Antonelli: Lead Software Engineer  Marissa Bennett: Team Coach Eric Carkin: Product Owner Grant Ferguson: Scrum Master Fareya Ikram: Assistant Lead Software Engineer Stephen Lucas: Documentation Analyst Yossef Naim: Algorithms Specialist James Petullo: Database Specialist Gabriel Rodriguez: Test Engineer Rachael Sallie: Assistant Lead Software Engineer Rasheeda Samih: UI-Graphics Engineer Jeremy Wong: Project Manager " wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="20.0" />
                     </font></Label>
               </children>
            </HBox>
         </children>
      </GridPane>
   </center>
   <top>
      <JFXToolbar minHeight="50.0" minWidth="600.0" style="-fx-background-color: #323a45;">
         <left>
            <JFXButton mnemonicParsing="false" onAction="#goHome" text="TTB COLA Search" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Segoe UI Bold" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Assets/treasury_high_density.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </left>
         <right>
            <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
               <children>
                  <JFXButton mnemonicParsing="false" onAction="#goAbout" text="About" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                     </font>
                  </JFXButton>
                  <JFXButton mnemonicParsing="false" onAction="#goSubmit" text="Submit Form" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                     </font>
                  </JFXButton>
                  <JFXButton mnemonicParsing="false" onAction="#goWorkflow" text="Workflow" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                     </font>
                  </JFXButton>
                  <JFXButton fx:id="tb_loginButton" mnemonicParsing="false" onAction="#goLogin" text="Login" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
            </HBox>
         </right>
      </JFXToolbar>
   </top>
</BorderPane>
