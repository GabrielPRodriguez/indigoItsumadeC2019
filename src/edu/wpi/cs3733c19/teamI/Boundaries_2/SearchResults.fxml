<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733c19.teamI.Controllers2.ResultsController">
   <top>
      <fx:include source="TTBToolbar.fxml"/>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="784.0" prefWidth="1527.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="15.0">
               <children>
                  <HBox alignment="CENTER" spacing="80.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField prefHeight="50.0" promptText="Find A Beverage" HBox.hgrow="ALWAYS" />
                        <JFXComboBox focusColor="#aeb0b5" promptText="Sort By:" unFocusColor="BLACK" HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="CSV" mnemonicParsing="false" onAction="#writeExcel" style="-fx-background-color: #4773aa;" text="Export CSV" textFill="WHITE" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Segoe UI Bold" size="15.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Separator prefWidth="200.0" />
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <TableView fx:id="tableView" maxWidth="-Infinity" minWidth="-Infinity" onMouseClicked="#table_selected" prefHeight="500.0" prefWidth="722.0">
                     <columns>
                        <TableColumn fx:id="ResultNumber" minWidth="40.0" prefWidth="-1.0" text="No." />
                        <TableColumn fx:id="BrandName" minWidth="100.0" prefWidth="-1.0" text="Brand Name" />
                        <TableColumn fx:id="Type" minWidth="100.0" prefWidth="-1.0" text="Type" />
                        <TableColumn fx:id="AlchoholPercentage" minWidth="100.0" prefWidth="-1.0" text="Percentage" />
                        <TableColumn fx:id="Domestic" minWidth="100.0" prefWidth="-1.0" text="Origin" />
                     </columns></TableView>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Results Per Page:">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></Label>
                  <JFXButton fx:id="fiveResultsButton" mnemonicParsing="false" onAction="#perPageAction" text="5">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="tenResultsButton" mnemonicParsing="false" onAction="#perPageAction" text="10">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="fiftyResultsButton" layoutX="282.0" layoutY="10.0" mnemonicParsing="false" onAction="#perPageAction" text="50">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="hundredResultsButton" layoutX="302.0" layoutY="10.0" mnemonicParsing="false" onAction="#perPageAction" text="100">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Page Number: ">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></Label>
                  <JFXButton fx:id="lowerResults" mnemonicParsing="false" onAction="#setLowerPages" text="...">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="firstPage" layoutX="269.0" layoutY="10.0" mnemonicParsing="false" onAction="#pageNumAction" text="1">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="secondPage" layoutX="280.0" layoutY="10.0" mnemonicParsing="false" onAction="#pageNumAction" text="2">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="thirdPage" layoutX="292.0" layoutY="10.0" mnemonicParsing="false" onAction="#pageNumAction" text="3">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="fourthPage" layoutX="303.0" layoutY="10.0" mnemonicParsing="false" onAction="#pageNumAction" text="4">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
                  <JFXButton fx:id="higherResults" mnemonicParsing="false" onAction="#setHigherPages" text="...">
                     <font>
                        <Font name="Segoe UI Bold" size="15.0" />
                     </font></JFXButton>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
