<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<JFXToolbar fx:id="toolbar" minHeight="50.0" minWidth="600.0" style="-fx-background-color: #323a45;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733c19.teamI.Controllers2.ToolBarController">
   <left>
      <JFXButton fx:id="tb_homeButton" mnemonicParsing="false" onAction="#goHome" text="TTB COLA Search" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Assets/treasury_high_density.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
   </left>
   <right>
      <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="tb_aboutButton" mnemonicParsing="false" onAction="#goAbout" text="About" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="tb_submitButton" mnemonicParsing="false" onAction="#goSubmit" text="Submit Form" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="tb_workflowButton" mnemonicParsing="false" onAction="#goWorkflow" text="Workflow" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="tb_loginButton" mnemonicParsing="false" onAction="#goLogin" text="Login" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="tb_exitButton" mnemonicParsing="false" onAction="#goExit" text="Exit" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </right>
</JFXToolbar>
