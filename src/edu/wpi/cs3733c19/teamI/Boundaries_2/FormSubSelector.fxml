<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733c19.teamI.Controllers2.FormSubSelectorController">
   <top>
    <fx:include source="TTBToolbar.fxml" />
   </top>
    <center>
      <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="How would you like to fill out your form?">
               <font>
                  <Font name="Segoe UI Bold" size="22.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="100.0">
               <children>
                  <JFXButton fx:id="singlePageButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#goNormalFormSub" style="-fx-background-color: #00a6d2; -fx-background-radius: 10;" text="Single Page" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView glyphName="FILE_ALT" size="100" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </graphic></JFXButton>
                  <JFXButton fx:id="multiPageButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#goMultiFormSub" style="-fx-background-color: #00a6d2; -fx-background-radius: 10;" text="Multi-Page" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                     </font>
                     <graphic>
                        <FontAwesomeIconView glyphName="FILES_ALT" size="100" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </graphic></JFXButton>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin></VBox>
   </center>
</BorderPane>
