<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733c19.teamI.Controllers.LoginController">
   <content>
      <AnchorPane prefHeight="918.0" prefWidth="1289.0">
         <children>
            <TextField fx:id="username" layoutX="619.0" layoutY="410.0" promptText="Username" />
            <Label layoutX="487.0" layoutY="414.0" text="Username" />
            <Label layoutX="487.0" layoutY="456.0" text="Password" />
            <Label layoutX="652.0" layoutY="350.0" />
            <Button fx:id="login" layoutX="538.0" layoutY="521.0" mnemonicParsing="false" onAction="#attemptLogin" prefHeight="25.0" prefWidth="283.0" text="Login or Create Account" />
            <PasswordField fx:id="password" layoutX="619.0" layoutY="461.0" promptText="Password" />
            <Label fx:id="errorMessage" layoutX="507.0" layoutY="361.0" prefHeight="21.0" prefWidth="291.0" text="Enter a Username and Password to Login" />
            <Button fx:id="goToHome" layoutX="469.0" layoutY="521.0" mnemonicParsing="false" onAction="#goHome" text="Home" />
            <ImageView fitHeight="293.0" fitWidth="449.0" layoutX="506.0" layoutY="47.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Assets/treasury_high_density.png" />
               </image>
            </ImageView>
            <RadioButton fx:id="TTBLogin" layoutX="812.0" layoutY="414.0" mnemonicParsing="false" text="TTB Employee">
               <toggleGroup>
                  <ToggleGroup fx:id="SignIn" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="FormLogin" layoutX="812.0" layoutY="435.0" mnemonicParsing="false" text="Form Submission" toggleGroup="$SignIn" />
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
